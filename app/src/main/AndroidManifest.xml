<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lazydevs.bluepill">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_final"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_final_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReliquatActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:name=".ModifierMedicamentActivity"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".ModifierPatientActivity"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".AddMedicamentActivity"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".AddPatientActivity"
            android:theme="@style/noAnimTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>