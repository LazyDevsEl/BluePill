<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculFragment"
    android:background="@color/white"
    android:id="@+id/scrollview"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
    <TextView
        android:id="@+id/num_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro du Patient:"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/num_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:ems="5"
        android:inputType="number"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:background="@drawable/borderblack"
        android:padding="10dp"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/nom_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du Médicament:"
        android:layout_below="@+id/num_patient"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/nom_medicament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:padding="10dp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:inputType="text"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:background="@drawable/borderblack"
        android:layout_below="@id/num_patient"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/posologie_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posologie:"
            android:layout_below="@+id/nom_medicament"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/posologie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:padding="10dp"
            android:hint="mg/m²"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:background="@drawable/borderblack"
            android:layout_below="@id/nom_medicament"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/calcul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@+id/input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_change"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calcul"
        android:layout_margin="20dp"
        android:background="@drawable/borderblack"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/bfdose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose à administrer: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/idhl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/udose"

            />
        <TextView
            android:id="@+id/udose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" mg"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/bfvolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volume final: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/bfdose"/>

        <TextView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/uvolume"
            android:layout_below="@+id/udose"/>
        <TextView
            android:id="@+id/uvolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ml"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/udose"/>

        <TextView
            android:id="@+id/bfflacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nbr de flacons: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/bfvolume"/>
        <TextView
            android:id="@+id/flacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/uflacon"
            android:layout_below="@+id/uvolume"/>

        <TextView
            android:id="@+id/uflacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" flacons"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/uvolume"/>

        <TextView
            android:id="@+id/bfreliquat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reliquat: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/bfflacon"/>
        <TextView
            android:id="@+id/reliquat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/ureliquat"
            android:layout_below="@+id/uflacon"/>
        <TextView
            android:id="@+id/ureliquat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ml"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/uflacon"/>

        <TextView
            android:id="@+id/bfreliquat_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reliquat total: "
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/bfreliquat"/>
        <TextView
            android:id="@+id/reliquat_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/ureliquat_final"
            android:layout_below="@+id/ureliquat"/>

        <TextView
            android:id="@+id/ureliquat_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ml"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ureliquat"/>

        <TextView
            android:id="@+id/bfpoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poche: "
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:layout_below="@+id/bfreliquat_final"/>

        <TextView
            android:id="@+id/poche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/upoche"
            android:layout_below="@+id/ureliquat_final"/>

        <TextView
            android:id="@+id/upoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ml"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ureliquat_final"/>

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/stability_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout"
            android:layout_margin="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/stability_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stability"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/type_flacon_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flacon de : "
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/stability_txt"/>
            <Spinner
                android:id="@+id/type_flacon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/flacon"
                android:layout_below="@+id/stability_txt"
                android:layout_toEndOf="@+id/type_flacon_txt"
                android:layout_marginLeft="30dp" />
            <TextView
                android:id="@+id/lumiere_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lumière : "
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/type_flacon_txt"/>
            <Spinner
                android:id="@+id/lumiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:entries="@array/lumiere"
                android:layout_below="@id/type_flacon"
                android:layout_alignStart="@+id/type_flacon"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/temp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Température : "
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lumiere_txt"/>
            <EditText
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="°C"
                android:inputType="number"
                android:layout_below="@id/lumiere"
                android:layout_alignStart="@+id/lumiere"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:background="@drawable/borderblack"
                android:padding="5dp"/>

            <Button
                android:id="@+id/stability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculer Stabilités"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_below="@+id/temp_txt"
                android:layout_centerHorizontal="true"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_change"/>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>