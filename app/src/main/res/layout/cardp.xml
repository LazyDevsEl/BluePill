<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="3dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/nom"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n°"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/nom"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2856"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/nom"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/n"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenom"
            android:layout_margin="10dp"
            android:background="@drawable/borderblack"
            android:padding="20dp"
            android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/taille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="181"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_toEndOf="@+id/bf"/>
        <TextView
            android:id="@+id/bf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taille : "
            android:textSize="12dp"
            android:textColor="@color/grey2" />
        <TextView
            android:id="@+id/af"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" m"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_toEndOf="@+id/taille"/>

        <TextView
            android:id="@+id/poids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="92"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_below="@+id/taille"
            android:layout_toEndOf="@+id/bfp"/>
        <TextView
            android:id="@+id/bfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poids : "
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_below="@+id/taille"/>
        <TextView
            android:id="@+id/afp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" kg"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_below="@+id/taille"
            android:layout_toEndOf="@+id/poids"/>
        <TextView
            android:id="@+id/sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_toEndOf="@+id/bfs"
            android:layout_below="@+id/poids"/>
        <TextView
            android:id="@+id/bfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surface Corporelle : "
            android:textSize="12dp"
            android:textColor="@color/grey2"

            android:layout_below="@+id/poids"/>
        <TextView
            android:id="@+id/afs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" m²"
            android:textSize="12dp"
            android:textColor="@color/grey2"
            android:layout_toEndOf="@+id/sc"
            android:layout_below="@+id/poids"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>