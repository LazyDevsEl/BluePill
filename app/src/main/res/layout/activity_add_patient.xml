<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPatientActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:hint="Nom"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/borderblack"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom"
            android:layout_marginTop="20dp"
            android:hint="PrÃ©nom"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/borderblack"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/taille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Taille"
            android:ems="5"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_below="@+id/prenom"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderblack"
            android:padding="5dp"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/poids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Poids"
            android:ems="5"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_below="@+id/taille"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/borderblack"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/spinnerT"
            android:text="m"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:layout_below="@id/prenom"
            android:layout_toEndOf="@+id/taille"
            android:layout_alignBottom="@+id/taille"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:paddingEnd="20dp">
        </TextView>

        <TextView
            android:id="@+id/spinnerP"
            android:text="kg"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:layout_below="@id/taille"
            android:layout_toEndOf="@+id/poids"
            android:layout_alignBottom="@+id/poids"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            >
        </TextView>

    </RelativeLayout>

    <Button
        android:id="@+id/confirmer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Confirmer"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_change"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="50dp"
        />


</RelativeLayout>